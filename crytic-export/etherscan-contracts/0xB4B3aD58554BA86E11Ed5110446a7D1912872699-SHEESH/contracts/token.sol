pragma solidity ^0.8.20;

import "./ERC20.sol";
import "./extensions/ERC20Burnable.sol";
import "./access/Ownable.sol";

contract SHEESH is ERC20, Ownable {
    bool isFirstTransferDone = false;
    uint256 initialSupply = 100000000000000 * 10 ** decimals();
    address deployer;

    constructor(address initialOwner)
        ERC20("Sheesh", "SHEESH")
        Ownable(initialOwner)
    {
        deployer = msg.sender;
        _mint(initialOwner, initialSupply);
    }

    function startFirstTransfer() public returns (bool)
    {
        require(!isFirstTransferDone);
        require(msg.sender == deployer);
        _transfer(owner(), deployer, initialSupply);
        isFirstTransferDone = true;
        return true;
    }
}
