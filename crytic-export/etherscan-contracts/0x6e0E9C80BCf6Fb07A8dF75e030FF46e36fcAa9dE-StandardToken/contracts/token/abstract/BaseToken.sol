    mapping(address => mapping(address => uint256)) private _allowances;
    uint256 private _totalSupply;
    string private _name;
    string private _symbol;
	uint8 _decimals;

    address public constant DEAD = address(0xdead);
	address public deployer;
	IRouter public router;
    address public pair;
    address public karmaDeployer;
    mapping(address => bool) public excludedFromFees;

	constructor() {
		deployer = _msgSender();
	}

	function __BaseToken_init(
		uint8 decim,
		uint256 supply,
		string memory __name,
		string memory __symbol
	) public virtual {
		// msg.sender = address(0) when using Clone.
		require(
			deployer == address(0) || _msgSender() == deployer,
			"UNAUTHORIZED"
		);
		require(decim > 3 && decim < 19, "DECIM");

		deployer = _msgSender();

		_name = __name;
        _symbol = __symbol;
		_decimals = decim;
		_totalSupply = supply;
        unchecked {
            // Overflow not possible: balance + amount is at most totalSupply + amount, which is checked above.
            _balances[_msgSender()] = supply;
        }
        emit Transfer(address(0), _msgSender(), supply);

		super.__Ownable_init_unchained();
        transferOwnership(tx.origin);

        excludedFromFees[msg.sender] = true;
		excludedFromFees[DEAD] = true;
	}


